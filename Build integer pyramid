#include <iostream>
using namespace std;

void main()
{
    int row;
    int n;
    int no;
    cout << "Enter number of rows: ";
    cin >> row;

        for (n= 1; n<= row; ++n)
    {
        for (no = 1; no <= n; ++no)
        {
            cout << no << " ";
        }
        cout << "\n";
    }
    
}
